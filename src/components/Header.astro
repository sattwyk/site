---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between items-center">
      <Link href="/" underline={false}>
        <div
          class="font-semibold text-black dark:text-white hover:opacity-80 transition-opacity duration-300"
        >
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex items-center gap-1 text-sm">
        <Link
          href="/blog"
          class="nav-link px-3 py-1.5 rounded-full hover:bg-black/5 dark:hover:bg-white/10 transition-all duration-300"
        >
          blog
        </Link>
        <span class="text-black/20 dark:text-white/20">
          {`/`}
        </span>
        <Link
          href="/work"
          class="nav-link px-3 py-1.5 rounded-full hover:bg-black/5 dark:hover:bg-white/10 transition-all duration-300"
        >
          work
        </Link>
        <span class="text-black/20 dark:text-white/20">
          {`/`}
        </span>
        <Link
          href="/projects"
          class="nav-link px-3 py-1.5 rounded-full hover:bg-black/5 dark:hover:bg-white/10 transition-all duration-300"
        >
          projects
        </Link>
      </nav>
    </div>
  </Container>
</header>

<style>
  header {
    view-transition-name: header;
  }
</style>
